<Button
    android:id="@+id/przyciskFavorite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Dodaj do ulubionych"
    android:textColor="#FFFFFF"
    android:backgroundTint="@color/buttonBackgroundColor"
    android:padding="12dp"
    android:layout_marginBottom="12dp"/>

<Button
    android:id="@+id/przyciskUdostepnij"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Udostępnij"
    android:textColor="#FFFFFF"
    android:backgroundTint="@color/buttonBackgroundColor"
    android:padding="12dp"/>
</LinearLayout>

------------------------klasa-------------------
package com.example.losowycytat;
public class Cytat {
    String tresc;
    String autor;

    public Cytat(String tresc, String autor) {
        this.tresc = tresc;
        this.autor = autor;
    }
}
