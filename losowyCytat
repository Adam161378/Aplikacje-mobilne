java
package com.example.generator_cytatow;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;
import android.widget.Toast;

import java.util.ArrayList;
import java.util.Random;

public class MainActivity extends AppCompatActivity {

    private ArrayList<Cytat> listaCytatow = new ArrayList<>();
    private ArrayList<String> listaUlubione = new ArrayList<String>();
    private Random randomGenerator = new Random();

    // Opcjonalnie do zadania 1 - uniknięcie powtórzeń
    private int ostatniIndeks = -1;

    private TextView tekstCytatu;
    private TextView tekstAutora;
    private Button przyciskLosuj;
    private Button przyciskFavorite;

    private Button przyciskUdostepnij;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        // Referencje do widoków
        tekstCytatu = findViewById(R.id.tekstCytatu);
        tekstAutora = findViewById(R.id.tekstAutora);
        przyciskLosuj = findViewById(R.id.przyciskLosuj);
        przyciskFavorite = findViewById(R.id.przyciskFavorite);
        przyciskUdostepnij = findViewById(R.id.przyciskUdostepnij);

        // Przygotowanie danych cytatów
        przygotujDaneCytatow();

        // Ustawienie pierwszego cytatu od razu
        wylosujINastawNowyCytat();
        przyciskFavorite.setOnClickListener(v -> dodajDoUlubionych());

        // Obsługa kliknięcia przycisku
        przyciskLosuj.setOnClickListener(v -> wylosujINastawNowyCytat());
        przyciskUdostepnij.setOnClickListener(v -> udostepnij());
    }

    private void przygotujDaneCytatow() {
        listaCytatow.add(new Cytat("Być albo nie być, oto jest pytanie.", "William Szekspir"));
        listaCytatow.add(new Cytat("Wiem, że nic nie wiem.", "Sokrates"));
        listaCytatow.add(new Cytat("Myślę, więc jestem.", "Kartezjusz"));
        listaCytatow.add(new Cytat("Życie jest tym, co się nam przydarza, gdy jesteśmy zajęci planowaniem.", "John Lennon"));
        listaCytatow.add(new Cytat("Nie bój się rezygnować z dobrego, aby osiągnąć wspaniałe.", "John D. Rockefeller"));
        listaCytatow.add(new Cytat("Człowiek jest tyle wart, ile może dać innym.", "Jan Paweł II"));
        listaCytatow.add(new Cytat("Kto nie zna przeszłości, skazany jest na jej powtórzenie.", "Janusz Korczak"));
        listaCytatow.add(new Cytat("Szczęście to jedyna rzecz, która się mnoży, gdy się ją dzieli.", "Andrzej Sapkowski"));
        listaCytatow.add(new Cytat("Nie ma rzeczy niemożliwych dla tego, kto chce.", "Adam Mickiewicz"));
        listaCytatow.add(new Cytat("Trzeba żyć tak, aby po nas coś zostało.", "Maria Skłodowska-Curie"));

    }

    // Metoda do losowania cytatu i ustawiania w TextView
    private void wylosujINastawNowyCytat() {
        if (!listaCytatow.isEmpty()) {
            int losowyIndeks;

            // Unikanie powtórzeń (zadanie 1)
            do {
                losowyIndeks = randomGenerator.nextInt(listaCytatow.size());
            } while (losowyIndeks == ostatniIndeks && listaCytatow.size() > 1);

            ostatniIndeks = losowyIndeks;

            Cytat losowyCytat = listaCytatow.get(losowyIndeks);
            tekstCytatu.setText(losowyCytat.tresc);
            tekstAutora.setText("- " + losowyCytat.autor);
        } else {
            Toast.makeText(this, "Lista cytatów jest pusta!", Toast.LENGTH_SHORT).show();
        }
    }

    private void dodajDoUlubionych() {
        String cytat = tekstCytatu.getText().toString();

        if (!listaUlubione.contains(cytat)) {
            listaUlubione.add(cytat);
            Toast.makeText(this, "Dodano do ulubionych", Toast.LENGTH_SHORT).show();
        } else {
            Toast.makeText(this, "Ten cytat już jest w ulubionych", Toast.LENGTH_SHORT).show();
        }
    }

    private void udostepnij(){
        Toast.makeText(this, "Kliknieto udostepnij", Toast.LENGTH_SHORT).show();
    }
}


