trzecia:
package com.example.loginawigacji;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.util.Log;
import android.widget.Button;

public class TrzeciaActivity extends AppCompatActivity {

    private static final String TAG = "TestCyklu";

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_trzecia);

        Button btndalej = findViewById(R.id.btnTrzecia);

        btndalej.setOnClickListener(v -> {
            Intent intent = new Intent(TrzeciaActivity.this, MainActivity.class);
            startActivity(intent);
        });

        Log.d(TAG, "Trzecia: onCreate");
    }
//Main znajduje się w stanie Onstop.
    @Override
    protected void onStart() {
        super.onStart();
        Log.d(TAG, "Trzecia: onStart");
    }

    @Override
    protected void onResume() {
        super.onResume();
        Log.d(TAG, "Trzecia: onResume");
    }

    @Override
    protected void onPause() {
        super.onPause();
        Log.d(TAG, "Trzecia: onPause");
    }

    @Override
    protected void onStop() {
        super.onStop();
        Log.d(TAG, "Trzecia: onStop");
    }

    @Override
    protected void onRestart() {
        super.onRestart();
        Log.d(TAG, "Trzecia: onRestart");
    }

    @Override
    protected void onDestroy() {
        super.onDestroy();
        Log.d(TAG, "Trzecia: onDestroy");
    }
}

