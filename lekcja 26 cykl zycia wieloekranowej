second:
package com.example.loginawigacji;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.util.Log;
import android.widget.Button;

public class DrugaActivity extends AppCompatActivity {

    private static final String TAG = "TestCyklu";

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_druga);

        Button btnWroc = findViewById(R.id.btnWroc); // Dodaj w XML!
        Button dalej = findViewById(R.id.Dodrugiej);
  //Jest onCreate ponieważ, startActivity tworzy actywnosc a nie ja wznawia

  //Wywołało onpause, poniewaz secondActivity jest na wierzchu a nie jako inna.

        btnWroc.setOnClickListener(v -> {
  // finish() programowo zamyka aktywność (działa jak strzałka wstecz)\
  // finish();

            startActivity(new Intent(this, MainActivity.class));
        });

        dalej.setOnClickListener(v -> {
            Intent intent = new Intent(DrugaActivity.this, TrzeciaActivity.class);
            startActivity(intent);
        });

        Log.d(TAG, "DRUGA: onCreate");
    }

    @Override protected void onStart() { super.onStart(); Log.d(TAG, "DRUGA: onStart"); }
    @Override protected void onResume() { super.onResume(); Log.d(TAG, "DRUGA: onResume"); }
    @Override protected void onPause() { super.onPause(); Log.d(TAG, "DRUGA: onPause"); }
    @Override protected void onStop() { super.onStop(); Log.d(TAG, "DRUGA: onStop"); }
    @Override protected void onRestart() { super.onRestart(); Log.d(TAG, "DRUGA: onRestart"); }
    @Override protected void onDestroy() { super.onDestroy(); Log.d(TAG, "DRUGA: onDestroy"); }
}
