// ======== MainActivity.java ========
package com.example.produktlista;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.ListView;
import androidx.appcompat.app.AppCompatActivity;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        String[] produkty = {"Chleb", "Mleko", "Jajka", "Masło", "Ser", "Szynka", "Pomidory"};

        ArrayAdapter<String> adapter = new ArrayAdapter<>(
                this,
                android.R.layout.simple_list_item_1,
                produkty
        );

        ListView listView = findViewById(R.id.listaProduktow);
        listView.setAdapter(adapter);

        listView.setOnItemClickListener(new AdapterView.OnItemClickListener() {
            @Override
            public void onItemClick(AdapterView<?> parent, View view, int position, long id) {
                String kliknietyProdukt = produkty[position];
                Intent intent = new Intent(MainActivity.this, DetailActivity.class);
                intent.putExtra("PRODUKT_NAZWA", kliknietyProdukt);
                intent.putExtra("PRODUKT_POZYCJA", position);
                startActivity(intent);
            }
        });
    }
}

// ======== DetailActivity.java ========
package com.example.produktlista;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;
import androidx.appcompat.app.AppCompatActivity;

public class DetailActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_detail);

        TextView tvNazwa = findViewById(R.id.tvNazwaProduktu);
        TextView tvOpis = findViewById(R.id.tvOpisProduktu);
        Button btnWroc = findViewById(R.id.btnWroc);

        Intent intent = getIntent();
        String nazwa = intent.getStringExtra("PRODUKT_NAZWA");
        int pozycja = intent.getIntExtra("PRODUKT_POZYCJA", -1);

        if (nazwa != null && pozycja >= 0) {
            tvNazwa.setText("Wybrałeś produkt nr " + (pozycja + 1) + ": " + nazwa);

            String opis;
            switch (nazwa) {
                case "Chleb":
                    opis = "Pełnoziarnisty";
                    break;
                case "Mleko":
                    opis = "Świeże, 3.2%";
                    break;
                case "Jajka":
                    opis = "10 sztuk, klasa A";
                    break;
                case "Masło":
                    opis = "200g, ekstra";
                    break;
                case "Ser":
                    opis = "Żółty, 250g";
                    break;
                case "Szynka":
                    opis = "Wędlina drobiowa";
                    break;
                case "Pomidory":
                    opis = "Świeże, czerwone";
                    break;
                default:
                    opis = "Brak opisu";
            }
            tvOpis.setText(opis);
        }

        btnWroc.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                finish();
            }
        });
    }
}
