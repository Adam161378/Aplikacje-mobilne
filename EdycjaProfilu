MainActivity:
package com.example.edytorprofilu;

import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.TextView;
import android.widget.Toast;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;

public class ProfilActivity extends AppCompatActivity {

    private static final int KOD_EDYCJI = 100;

    public static final String EXTRA_IMIE = "extra_imie";
    public static final String EXTRA_WIEK = "extra_wiek";

    TextView tekstImie, tekstWiek;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_profil);

        tekstImie = findViewById(R.id.tekstImie);
        tekstWiek = findViewById(R.id.tekstWiek);

        Button przyciskEdytuj = findViewById(R.id.przyciskEdytuj);

        przyciskEdytuj.setOnClickListener(v -> {
            Intent intent = new Intent(this, EdycjaProfiluActivity.class);
            intent.putExtra(EXTRA_IMIE, tekstImie.getText().toString());
            intent.putExtra(EXTRA_WIEK, tekstWiek.getText().toString());
            startActivityForResult(intent, KOD_EDYCJI);
        });
    }

    @Override
    protected void onActivityResult(int requestCode, int resultCode, Intent data) {
        super.onActivityResult(requestCode, resultCode, data);

        if (resultCode == RESULT_CANCELED) {
            Toast.makeText(this, "Edycja anulowana", Toast.LENGTH_SHORT).show();
            return;
        }

        if (requestCode == KOD_EDYCJI && resultCode == RESULT_OK && data != null) {
            tekstImie.setText(data.getStringExtra(EXTRA_IMIE));
            tekstWiek.setText(data.getStringExtra(EXTRA_WIEK));
        }
    }
}


xml:
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tekstImie"
        android:text="Jan"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstWiek"
        android:text="23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/przyciskEdytuj"
        android:text="Edytuj profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

Edycja:
package com.example.edytorprofilu;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Toast;

import androidx.appcompat.app.AppCompatActivity;

public class EdycjaProfiluActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_edycja_profilu);

        EditText poleImie = findViewById(R.id.poleImie);
        EditText poleWiek = findViewById(R.id.poleWiek);
        Button przyciskZapisz = findViewById(R.id.przyciskZapisz);

        Intent intent = getIntent();
        poleImie.setText(intent.getStringExtra(ProfilActivity.EXTRA_IMIE));
        poleWiek.setText(intent.getStringExtra(ProfilActivity.EXTRA_WIEK));

        przyciskZapisz.setOnClickListener(v -> {
            if (poleImie.getText().toString().trim().isEmpty()) {
                Toast.makeText(this, "Imię nie może być puste", Toast.LENGTH_SHORT).show();
                return;
            }

            Intent wynik = new Intent();
            wynik.putExtra(ProfilActivity.EXTRA_IMIE, poleImie.getText().toString());
            wynik.putExtra(ProfilActivity.EXTRA_WIEK, poleWiek.getText().toString());

            setResult(Activity.RESULT_OK, wynik);
            finish();
        });
    }
}
Edycja.xml
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/poleImie"
        android:hint="Imię"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/poleWiek"
        android:hint="Wiek"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/przyciskZapisz"
        android:text="Zapisz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
