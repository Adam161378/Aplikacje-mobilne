<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tekstNumerPytania"
        style="@style/TekstNaglowek"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tekstTrescPytania"
        style="@style/TekstPytanie"/>

    <RadioGroup
        android:id="@+id/radioGroupOdpowiedzi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/przyciskDalej"
        style="@style/Przycisk"
        android:text="Dalej"/>

    <Button
        android:id="@+id/przyciskRestart"
        style="@style/Przycisk"
        android:text="Zagraj ponownie"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tekstWynik"
        style="@style/TekstWynik"/>

</LinearLayout>
----------------------------------------------
java:
package com.example.losowepytania;

import android.os.Bundle;
import android.os.Handler;
import android.view.View;
import android.widget.*;
import androidx.appcompat.app.AppCompatActivity;
import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {

    TextView tekstNumerPytania, tekstTrescPytania, tekstWynik;
    RadioGroup radioGroupOdpowiedzi;
    Button przyciskDalej, przyciskRestart;
    ProgressBar progressBar;

    ArrayList<Pytanie> listaPytan = new ArrayList<>();
    ArrayList<Integer> odpowiedziUzytkownika = new ArrayList<>();

    int aktualnyIndeksPytania = 0;
    int wynik = 0;

    long czasStart;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        tekstNumerPytania = findViewById(R.id.tekstNumerPytania);
        tekstTrescPytania = findViewById(R.id.tekstTrescPytania);
        tekstWynik = findViewById(R.id.tekstWynik);
        radioGroupOdpowiedzi = findViewById(R.id.radioGroupOdpowiedzi);
        przyciskDalej = findViewById(R.id.przyciskDalej);
        przyciskRestart = findViewById(R.id.przyciskRestart);
        progressBar = findViewById(R.id.progressBar);

        przygotujPytania();
        progressBar.setMax(listaPytan.size());

        czasStart = System.currentTimeMillis();
        wyswietlPytanie();

        przyciskDalej.setOnClickListener(v -> zapiszIOdepnij());
        przyciskRestart.setOnClickListener(v -> restartQuizu());
    }

    private void przygotujPytania() {
        listaPytan.add(new Pytanie(
                "Język Androida?",
                new ArrayList<String>() {{
                    add("Java");
                    add("Kotlin");
                    add("C++");
                }},
                1
        ));

        listaPytan.add(new Pytanie(
                "Kontener RadioButtonów?",
                new ArrayList<String>() {{
                    add("LinearLayout");
                    add("RadioGroup");
                    add("TextView");
                }},
                1
        ));

        listaPytan.add(new Pytanie(
                "Typ logiczny?",
                new ArrayList<String>() {{
                    add("int");
                    add("String");
                    add("boolean");
                }},
                2
        ));
    }

    private void wyswietlPytanie() {
        radioGroupOdpowiedzi.removeAllViews();
        radioGroupOdpowiedzi.clearCheck();

        Pytanie p = listaPytan.get(aktualnyIndeksPytania);

        tekstNumerPytania.setText(
                "Pytanie " + (aktualnyIndeksPytania + 1) + "/" + listaPytan.size()
        );
        tekstTrescPytania.setText(p.getTresc());
        tekstWynik.setText("Wynik: " + wynik);

        progressBar.setProgress(aktualnyIndeksPytania + 1);

        for (String odp : p.getOdpowiedzi()) {
            RadioButton rb = new RadioButton(this);
            rb.setText(odp);
            rb.setEnabled(true);
            rb.setBackgroundColor(0x00000000);
            radioGroupOdpowiedzi.addView(rb);
        }
    }

    private void zapiszIOdepnij() {
        int zaznaczoneId = radioGroupOdpowiedzi.getCheckedRadioButtonId();
        if (zaznaczoneId == -1) {
            Toast.makeText(this, "Zaznacz odpowiedź", Toast.LENGTH_SHORT).show();
            return;
        }

        View zaznaczony = findViewById(zaznaczoneId);
        int indeks = radioGroupOdpowiedzi.indexOfChild(zaznaczony);
        odpowiedziUzytkownika.add(indeks);

        aktualnyIndeksPytania++;

        if (aktualnyIndeksPytania < listaPytan.size()) {
            wyswietlPytanie();
        } else {
            wyswietlWynikKoncowy();
        }
    }

    private void wyswietlWynikKoncowy() {
        radioGroupOdpowiedzi.setVisibility(View.GONE);
        przyciskDalej.setVisibility(View.GONE);
        przyciskRestart.setVisibility(View.VISIBLE);

        for (int i = 0; i < listaPytan.size(); i++) {
            if (odpowiedziUzytkownika.get(i)
                    == listaPytan.get(i).getIndeksPoprawnej()) {
                wynik++;
            }
        }

        long czasKoniec = System.currentTimeMillis();
        long sekundy = (czasKoniec - czasStart) / 1000;

        tekstTrescPytania.setText(
                "Koniec quizu!\nWynik: " + wynik + "/" + listaPytan.size()
                        + "\nCzas: " + sekundy + " s"
        );
    }

    private void restartQuizu() {
        wynik = 0;
        aktualnyIndeksPytania = 0;
        odpowiedziUzytkownika.clear();
        czasStart = System.currentTimeMillis();

        radioGroupOdpowiedzi.setVisibility(View.VISIBLE);
        przyciskDalej.setVisibility(View.VISIBLE);
        przyciskRestart.setVisibility(View.GONE);

        wyswietlPytanie();
    }
}

-------------------------
pytanie.java
package com.example.losowepytania;

import java.util.ArrayList;

public class Pytanie {

    private String tresc;
    private ArrayList<String> odpowiedzi;
    private int indeksPoprawnej;

    public Pytanie(String tresc, ArrayList<String> odpowiedzi, int indeksPoprawnej) {
        this.tresc = tresc;
        this.odpowiedzi = odpowiedzi;
        this.indeksPoprawnej = indeksPoprawnej;
    }

    public String getTresc() {
        return tresc;
    }

    public ArrayList<String> getOdpowiedzi() {
        return odpowiedzi;
    }

    public int getIndeksPoprawnej() {
        return indeksPoprawnej;
    }
}

